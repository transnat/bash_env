#!/usr/bin/env bash
xrandr	                    \
    --output eDP-1	        \
        --off	            \
    --output DP-1-1.1	    \
        --primary	        \
        --mode 1920x1080	\
        --pos 1080x212	    \
        --rotate normal	    \
    --output DP-1-1.2	    \
        --mode 1920x1080	\
        --pos 3000x0	    \
        --rotate right	    \
    --output DP-1-1.3	    \
        --mode 1920x1080	\
        --pos 0x0	        \
        --rotate left	    \
    --output DP-1-0	        \
        --off	            \
    --output DP-1-1	        \
        --off	            \
    --output HDMI-1-0	    \
        --off
