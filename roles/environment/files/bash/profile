# If running bash, include .bashrc.
if [ -n "${BASH_VERSION}" ]; then
  if [ -f "${HOME}/.bashrc" ]; then
    . "${HOME}/.bashrc" >> /dev/null
  fi
fi

PATH_DIRS=(
    "/usr/local/bin"
    "${HOME}/.local/bin"
    "${HOME}/.local/lib/scripts/python"
    "${HOME}/.local/lib/scripts/sh"
    "${HOME}/.local/lib/scripts/gsh"
)

for DIR in ${PATH_DIRS[@]}; do
    if [ -d "${DIR}" ]; then
        PATH="${PATH}:${DIR}"
    fi
done
