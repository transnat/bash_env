# ~/.screenrc
startup_message off
caption always
shell -$SHELL
defshell -${SHELL}
shelltitle "$ |${SHELL}"
defscrollback 3000000
defslowpaste 1
hardstatus alwayslistline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'
