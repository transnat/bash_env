#!/bin/env bash
# Extract any compressed file or compress any uncompressed file

if [ -f $1 ] ; then
  case $1 in
    *.tar|*.tar.xz)
      tar -xf $1;;

    *.tbz2|*.tar.bz2)
      tar -xjf $1;;

    *.tgz|*.tar.gz)
      tar -xzf $1;;

    *.bz2)
      bunzip2 $1;;

    *.rar)
      unrar x $1;;

    *.gz)
      gunzip $1;;

    *.zip)
      unzip $1;;

    *.Z)
      uncompress $1;;

    *.7z)
      7z x $1;;

    *)
      tar -zcvf $1.tar.gz $1;;

  esac

else
  echo "'$1' is not a valid file"

fi
