'''
Procedurally generate a name for a sprint.
'''

import locale
import pathlib
from random import choice

locale.setlocale(locale.LC_ALL, 'en_US.UTF-8')                      # Set locale.

if __name__ == '__main__':
    words = open('/usr/share/dict/words', 'r').read().splitlines()

    print(f'{choice(words)} {choice(words)}')
